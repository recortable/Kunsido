<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8"/>
  <title><%= yield :title %> - decide.net </title>
  <link href='http://fonts.googleapis.com/css?family=Oswald' rel='stylesheet' type='text/css'>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link rel="stylesheet/less" type="text/css" href="/stylesheets/public.less">
  <script src="/javascripts/less-1.0.40.min.js" type="text/javascript"></script>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="app">
  <%= link_to 'Decide', root_path %>

  <div class="session">
    <% if current_user %>
        <%= link_to "Eres #{current_user.name}" %>
        <%= link_to 'Tu decides', root_path %>
        <%= link_to 'Cerrar sesiÃ³n', logout_path %>
        <% if current_user.admin? %>
            <%= link_to 'Versiones', admin_versions_path %>
            <%= link_to 'Participantes', admin_users_path %>
        <% end %>
    <% else %>
    <% end %>
  </div>
</div>


<div id="page">
  <div class="head">
    <%= content_tag :div, flash[:notice], :id => "flash_notice" %>
  </div>
  <%= yield %>
</div>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js"></script>
<script type="text/javascript">!window.jQuery && document.write('<script src="/javascripts/jquery-1.4.4.min.js"><\/script>')</script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.7/jquery-ui.min.js"></script>
<%= javascript_include_tag 'rails.js', 'public.js' %>
</body>

</html>